<h1>Edit a book<h1>

<form action="<%= books_path %>" method ="POST ">

  <input type="hidden" value="<%= form_authenticity_token %>" name="authenticity_token" /> 

 <input type="hidden" name="_method" value="patch" /> 

    <label for="title">Title</label>
    <input type="text" name="book[title]" id="title" value="<%= @book["title"] %>"   />

    <label for="author">Author</label>
    <input type="text"  name="book[author]" id="author" value="<%= @book["author"] %>"    />

    <label for="year">Year</label>
    <input type="number" min="1500" max="2020"  name="book[year]" id="year"   />


   <input type="submit" value="Update A Book"/>

</form> 