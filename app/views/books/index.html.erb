<h1>Book Page</h1>

<ul>
    <% @books.each_with_index do |book, index| %>
      <li>
         <h3>Title: <%=  book["title"]  %> </h3>
         <h3>Author: <%= book["author"] %> </h3>
         <h3>Published date: <%= book["published_date"] %>   </h3>
      </li>
      <div>
         <%= link_to "Update", edit_book_path(index + 1) %>
         <%= link_to "Show", book_path(index + 1) %>
         <%= link_to "Delete", book_path(index + 1), method: :delete %>
      </div>
        
    <% end %>  
</ul>

