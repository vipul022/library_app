<h1>Book Page</h1>

<ul>
    <% @books.each do |book| %>
      <li>
         <h3>Title: <%=  book["title"]  %> </h3>
         <h3>Author: <%= book["author"] %> </h3>
         <h3>Year: <%= book["year"] %>   </h3>
      </li>
    <% end %>  
</ul>

<div>
    <%= link_to("Add a new book", new_book_path) %>
</div>

<div>
    <%= link_to("Update a book", edit_book_path(:id)) %>
</div>
